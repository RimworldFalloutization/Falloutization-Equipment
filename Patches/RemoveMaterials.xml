<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Silver as ancient currency => Gold -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_AncientComplexRoomLoot_Default']//li[.='Silver']</xpath>
        <value>
            <li>Gold</li>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_AncientComplexRoomLoot_Better']//li[.='Silver']</xpath>
        <value>
            <li>Gold</li>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_ScarlandsHermeticCrate']//li[.='Silver']</xpath>
        <value>
            <li>Gold</li>
        </value>
    </Operation>

    <!-- Hyperweave -->
    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_AncientComplexRoomLoot_Default']//li[.='Hyperweave']</xpath>
    </Operation>
    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_AncientComplexRoomLoot_Better']//li[.='Hyperweave']</xpath>
    </Operation>
    <Operation Class="PatchOperationRemove" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_ScarlandsHermeticCrate']//li[.='Hyperweave']</xpath>
    </Operation>
    <Operation Class="PatchOperationRemove" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_HighValueCrate']//li[.='Hyperweave']</xpath>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Hyperweave"]</xpath>
        <value><preventSpawningInResourcePod>true</preventSpawningInResourcePod></value>
    </Operation>

    <!-- Bioferrite -->
    <Operation Class="PatchOperationRemove" MayRequire="Ludeon.RimWorld.Anomaly">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_AncientComplexRoomLoot_Better']/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li='Bioferrite']</xpath>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Bioferrite"]</xpath>
        <value><preventSpawningInResourcePod>true</preventSpawningInResourcePod></value>
    </Operation>

    <!-- Gravlite Panels -->
    <Operation Class="PatchOperationRemove" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_ScarlandsHermeticCrate']/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li='GravlitePanel']</xpath>
    </Operation>
    <Operation Class="PatchOperationRemove" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingSetMakerDef[defName='MapGen_HighValueCrate']/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li='GravlitePanel']</xpath>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="GravlitePanel"]</xpath>
        <value><preventSpawningInResourcePod>true</preventSpawningInResourcePod></value>
    </Operation>
</Patch>
