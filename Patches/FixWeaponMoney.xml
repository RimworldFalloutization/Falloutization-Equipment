<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Fix weaponMoney mins so pawnkinds can't spawn weaponless after weapon tag changes -->

  <!-- Even if some pawns should never spawn in Fallout, we want to fix them so they don't complain in the logs -->

  <Operation Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Biotech">
    <xpath>Defs/PawnKindDef[defName='Tribal_Warrior_Fire']</xpath>
    <value>
      <weaponMoney>245~245</weaponMoney>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace" MayRequire="Rick.FCP.Legion">
    <xpath>Defs/PawnKindDef[defName='FCP_Legion_Recruit']/weaponMoney</xpath>
    <value>
      <weaponMoney>220~300</weaponMoney>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace" MayRequire="Rick.FCP.Legion">
    <xpath>Defs/PawnKindDef[defName='FCP_Unique_Pawnkind_Otho']/weaponMoney</xpath>
    <value>
      <weaponMoney>160~300</weaponMoney>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace" MayRequire="Rick.FCP.Legion">
    <xpath>Defs/PawnKindDef[defName='FCP_Unique_Pawnkind_Antony']/weaponMoney</xpath>
    <value>
      <weaponMoney>160~250</weaponMoney>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace" MayRequire="Ludeon.RimWorld.Biotech,Rick.FCP.EnergyWeapons">
    <xpath>Defs/PawnKindDef[defName='Mechanitor']/weaponMoney</xpath>
    <value><weaponMoney>800~1000</weaponMoney></value>
  </Operation>

  <Operation Class="PatchOperationReplace" MayRequire="Rick.FCP.BallisticWeapons">
    <xpath>Defs/PawnKindDef[@Name='MercenarySniperBase']/weaponMoney</xpath>
    <value><weaponMoney>2600~3000</weaponMoney></value>
  </Operation>

  <Operation Class="PatchOperationReplace" MayRequire="Ludeon.RimWorld.Ideology">
    <xpath>Defs/PawnKindDef[defName='WellEquippedTraveler']/weaponMoney</xpath>
    <value><weaponMoney>495~600</weaponMoney></value>
  </Operation>

  <Operation Class="PatchOperationReplace" MayRequire="Rick.FCP.PowerArmor">
    <xpath>Defs/PawnKindDef[defName='FCP_Pawnkind_Power_Armor_Trader']/weaponMoney</xpath>
    <value><weaponMoney>495~600</weaponMoney></value>
  </Operation>

  <Operation Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Royalty">
    <xpath>Defs/PawnKindDef[defName='Empire_Fighter_Cataphract']</xpath>
    <value><weaponMoney>2400~3000</weaponMoney></value>
  </Operation>
</Patch>
