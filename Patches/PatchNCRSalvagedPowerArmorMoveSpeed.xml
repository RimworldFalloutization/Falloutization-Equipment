      </match>
      <nomatch Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName='FCP_Apparel_NCR_Salvaged_Power_Armor']/equippedStatOffsets</xpath>
        <value>
          <MoveSpeed>-0.8</MoveSpeed>
        </value>
      </nomatch>
    </match>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName='FCP_Apparel_NCR_Salvaged_Power_Armor']</xpath>
      <value>
        <equippedStatOffsets>
          <MoveSpeed>-0.8</MoveSpeed>
        </equippedStatOffsets>
      </value>
    </nomatch>
  </Operation>
</Patch>

